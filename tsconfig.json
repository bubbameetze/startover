{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",  
        "lib": ["es2016", "dom"],   
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "typeScript",
        "typeRoots": [ "./node_modules/@types" ],
        "types": ["node","cucumber"], 
        "esModuleInterop": true,
        "resolveJsonModule": true       
    },
    "exclude": [
        "node_modules",
        "typescript"
    ]
}